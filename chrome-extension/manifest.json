{
  "manifest_version": 3,
  "name": "Eco Page Reader",
  "version": "1.0",
  "description": "Reads the current page URL and displays a small icon.",
  "icons": {
    "16": "images/leafIcon.svg",
    "48": "images/leafIcon.svg",
    "128": "images/leafIcon.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["contentStyle.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/leafIcon.svg",
        "images/*.svg", 
        "resources/textBox.html",
        "resources/textBoxScript.js",
        "resources/textBoxStyle.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}