{
  "manifest_version": 3,
  "name": "Eco Extension",
  "version": "1.0",
  "description": "Extension for local impact awareness",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://projects.propublica.org/*",
    "https://api.openai.com/*",
    "https://language.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.nytimes.com/*",
        "https://www.economist.com/*",
        "https://www.wsj.com/*",
        "https://www.washingtonpost.com/*"
      ],
      "js": [
        "config.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "resources/textBox.html",
        "resources/textBoxStyle.css",
        "resources/styledIcon.css",
        "resources/textBoxScript.js",
        "images/*.svg"
      ],
      "matches": [
        "https://www.nytimes.com/*",
        "https://www.economist.com/*", 
        "https://www.wsj.com/*",
        "https://www.washingtonpost.com/*"
      ]
    }
  ]
}